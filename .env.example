# Example environment variables
# Copy to ".env" and set secure values. Do NOT commit real secrets.

# Database (defaults for Docker Compose)
# NOTE: Replace values below with your own. Do NOT commit real credentials.
POSTGRES_USER=REPLACE_ME
POSTGRES_PASSWORD=REPLACE_ME
POSTGRES_DB=event_survey
# For Compose, "db" is the Postgres service hostname. For local dev outside Compose, change host to localhost.
DATABASE_URL=postgresql://REPLACE_ME:REPLACE_ME@db:5432/event_survey?schema=public

# App
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Session/JWT
# Generate secure random values for production (minimum 32 characters). Do not commit real secrets.
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING
SESSION_MAX_AGE=86400000
# Optional; falls back to SESSION_SECRET if not set
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# Prisma
PRISMA_HIDE_UPDATE_MESSAGE=1

# Initial admin bootstrap (optional, used by first-run helper)
# Replace with a secure password during bootstrap; do NOT commit real credentials.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=REPLACE_ME

# App defaults
DEFAULT_EVENT_SLUG=fall-summit-2025
