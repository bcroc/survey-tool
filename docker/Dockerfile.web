### Web production Dockerfile - build with Node, serve static via nginx
FROM node:18-bullseye-slim AS builder
WORKDIR /work

COPY package*.json ./
COPY web/package*.json ./web/
## Use `npm ci` if a lockfile is present, otherwise fall back to `npm install`.
RUN npm ci --legacy-peer-deps || npm install --legacy-peer-deps

COPY tsconfig.base.json ./
COPY web/ ./web/
WORKDIR /work/web
RUN npm run build

### Nginx runtime serving static files
FROM nginx:1.25-alpine as runtime
COPY --from=builder /work/web/dist /usr/share/nginx/html

# Remove default nginx.conf and provide a minimal one optimized for SPA
COPY docker/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["/usr/sbin/nginx", "-g", "daemon off;"]
