# Environment Variables Configuration
# Copy this file to .env and update with your actual values

# Node Environment
NODE_ENV=development # Options: development, production, test

# Server Configuration
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/event_survey_db

# Session Configuration
# Generate a secure random string for production (min 32 characters)
SESSION_SECRET=change-this-to-a-secure-random-string-in-production-minimum-32-chars
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# Frontend
FRONTEND_URL=http://localhost:5173

# IMPORTANT: Never commit the .env file to version control!
# Add .env to your .gitignore file
